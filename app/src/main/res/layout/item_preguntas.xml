<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_preguntas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pregunta"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/opcion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 1"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"/>
    <RadioGroup
        android:id="@+id/opciones1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/valor1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/opcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 2"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"/>
    <RadioGroup
        android:id="@+id/opciones2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/valor2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor2_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/opcion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 3"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"/>
    <RadioGroup
        android:id="@+id/opciones3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/valor3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor3_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/opcion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 4"
        android:layout_marginVertical="10dp"
        android:textSize="20sp"/>
    <RadioGroup
        android:id="@+id/opciones4_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/valor4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/valor4_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"/>
    </RadioGroup>
</LinearLayout>